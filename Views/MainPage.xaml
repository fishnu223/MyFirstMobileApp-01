<?xml version="1.0" encoding="utf-8" ?>
<ContentPage    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                x:Class="MyFirstMobileApp.Views.MainPage"
                Title="{Binding Title}">


    <VerticalStackLayout Padding="24,16" Spacing="24">

        <Grid RowSpacing="20"
              ColumnSpacing="20"
              Padding="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Text="{Binding TitleButtonLayouts}" 
                    Grid.Row="0"
                    Grid.Column="0"
                    Style="{StaticResource TileButton}"
                    Command="{Binding LayoutsClickedCommand}"/>

            <Button Text="{Binding TitleButtonImages}"
                    Grid.Row="0"
                    Grid.Column="1"
                    Style="{StaticResource TileButton}"/>

            <Button Text="{Binding TitleButtonCollections}"
                    Grid.Row="1"
                    Grid.Column="0"
                    Style="{StaticResource TileButton}"/>

            <Button Text="{Binding TitleButtonControls}" 
                    Grid.Row="1"
                    Grid.Column="1"
                    Style="{StaticResource TileButton}"/>

            <Button Text="{Binding TitleButtonSQLLite}" 
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Style="{StaticResource TileButton}"/>

        </Grid>

    </VerticalStackLayout>
    
</ContentPage>