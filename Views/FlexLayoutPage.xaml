<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMobileApp.Views.FlexLayoutPage"
             Title="{Binding Title}">

    <FlexLayout Direction="Row" 
                JustifyContent="SpaceEvenly" 
                AlignItems="Center" 
                BackgroundColor="White">

        <VerticalStackLayout>
            <BoxView Color="Red"
                     WidthRequest="50"
                     HeightRequest="50"/>

            <Label Text="Red" 
                   FontSize="12" 
                   TextColor="Black"
                   HorizontalTextAlignment="Start"/>

        </VerticalStackLayout>

        <VerticalStackLayout>
            <BoxView Color="Green"
                     WidthRequest="50"
                     HeightRequest="50"/>

            <Label Text="Green" 
                   FontSize="12" 
                   TextColor="Black"
                   HorizontalTextAlignment="Start"/>


        </VerticalStackLayout>

        <VerticalStackLayout>
            <BoxView Color="Blue"
                     WidthRequest="50"
                     HeightRequest="50"/>

            <Label Text="Blue" 
                   FontSize="12" 
                   TextColor="Black"
                   HorizontalTextAlignment="Start"/>

        </VerticalStackLayout>

    </FlexLayout>
    
</ContentPage>