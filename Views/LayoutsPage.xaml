<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMobileApp.Views.LayoutsPage"
             Title="{Binding Title}">

    <VerticalStackLayout Padding="24,16" Spacing="24" >

        <Grid RowSpacing="20"
              ColumnSpacing="20"
              Padding="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Button Text="{Binding TitleButtonStackLayout}" 
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Style="{StaticResource TileButtonTypeTwo}"
                    Command="{Binding StackLayoutClickedCommand}"/>

            <Button Text="{Binding TitleButtonVerticalStack}" 
                    Grid.Row="1"
                    Grid.Column="0"
                    Style="{StaticResource TileButtonTypeTwo}"
                    Command="{Binding VerticalStackClickedCommand}"/>

            <Button Text="{Binding TitleButtonHorizontalStack}" 
                    Grid.Row="1"
                    Grid.Column="1"
                    Style="{StaticResource TileButtonTypeTwo}"
                    Command="{Binding HorizontalStackClickedCommand}"/>

            <Button Text="{Binding TitleButtonAbsoluteLayout}" 
                    Grid.Row="2"
                    Grid.Column="0"
                    Style="{StaticResource TileButtonTypeTwo}"
                    Command="{Binding AbsoluteLayoutClickedCommand}"/>

            <Button Text="{Binding TitleButtonFlexLayout}" 
                    Grid.Row="2"
                    Grid.Column="1"
                    Style="{StaticResource TileButtonTypeTwo}"
                    Command="{Binding FlexLayoutClickedCommand}"/>


        </Grid>

    </VerticalStackLayout>

</ContentPage>