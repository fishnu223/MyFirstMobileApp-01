<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMobileApp.Views.ControlsSliderXAMLPage"
             Title="{Binding Title}">

    <VerticalStackLayout Padding="20" Spacing="20">

        <BoxView x:Name="MyBox" Color="Blue" HeightRequest="25" HorizontalOptions="Fill" />

        <Slider x:Name="MySlider"
                Minimum="0" Maximum="1" Value="1"
                ThumbColor="Blue" MaximumTrackColor="BlueViolet" MinimumTrackColor = "DarkOrange"
                HorizontalOptions="Fill"
                ValueChanged="OnSliderValueChanged" />

        <Label x:Name="ValueLabel"
               FontAttributes="Bold" FontSize="Large" HorizontalOptions="Center" />

        <Label x:Name="InfoLabel"
               Text="Moving Slider Will Change Opacity"
               FontAttributes="Bold" FontSize="Medium" TextColor="Blue"
               HorizontalOptions="Center" />

    </VerticalStackLayout>

</ContentPage>