<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMobileApp.Views.CollectionsEditPage"
             Title="CollectionsEditPage">

    <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Start">

        <Label Text="Movie Title"
               FontSize="Large"
               FontAttributes="Bold"
               TextColor="Black" />

        <!-- Two-way bind to MovieName (injected via QueryProperty) -->
        <Entry Text="{Binding MovieName, Mode=TwoWay}"
               FontSize="Medium"
               TextColor="Blue" />

        <!-- RelayCommand on Update() generates UpdateCommand -->
        <Button x:Name="editBtn"
                Text="Update" 
                Command="{Binding UpdateClickedCommand}"
                BackgroundColor="Green"
                TextColor="White"
                FontAttributes="Bold" />

    </VerticalStackLayout>

</ContentPage>