<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMobileApp.Views.CollectionsMoviesImagesPage"
             Title="{Binding Title}">
    
    <VerticalStackLayout Padding="20" Spacing="10">

        <CollectionView x:Name="ItemsListView"
                        ItemsSource="{Binding MarvelMoviesCollection}"
                        SelectionMode="None">

            <CollectionView.ItemsLayout>

                <LinearItemsLayout Orientation="Vertical" />

            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>

                <DataTemplate x:DataType="local:MarvelMoviesImages">

                    <Grid Padding="2">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="2" />
                        </Grid.RowDefinitions>

                        <HorizontalStackLayout>

                            <VerticalStackLayout>

                                <Image Source="{Binding ImageSource}"
                                       HeightRequest="100"
                                       WidthRequest="100"
                                       Aspect="AspectFill"
                                       Margin="0,10,0,10"/>

                            </VerticalStackLayout>

                            <VerticalStackLayout>

                                <HorizontalStackLayout Grid.Row="0">

                                    <Label Text="{Binding NameofActor}"
                                           HorizontalTextAlignment="Start"
                                           TextColor="Grey"
                                           FontSize="Small"
                                           Margin="10" />

                                </HorizontalStackLayout>

                                <HorizontalStackLayout>

                                    <Label Text="{Binding NameofCharacter}"
                                           FontAttributes="Bold, Italic"
                                           HorizontalTextAlignment="Start"
                                           TextColor="Blue"
                                           FontSize="Small"
                                           Margin="10" />

                                </HorizontalStackLayout>

                            </VerticalStackLayout>

                        </HorizontalStackLayout>

                        <BoxView Grid.Row="1"
                                 HeightRequest="2" 
                                 BackgroundColor="LightGray" />

                    </Grid>

                </DataTemplate>

            </CollectionView.ItemTemplate>

        </CollectionView>

    </VerticalStackLayout>

</ContentPage>